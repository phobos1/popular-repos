{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["dom", "es2018"],
    "jsx": "react",
    "allowJs": true,
    "keyofStringsOnly": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "**/*.scss"
  ]
}